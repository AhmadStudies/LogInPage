<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ju.loginpage.Settings">

    <Button
        android:text="Return"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/buttonReturnSettings" />

    <Button
        android:text="Close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCloseSettings"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/buttonReturnSettings" />

    <Button
        android:text="Change Existing Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonChangeExistingAccount"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <Button
        android:text="Create New Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCreateNewAc2"
        android:layout_below="@+id/buttonChangeExistingAccount"
        android:layout_alignStart="@+id/buttonNewExchangeRate"
        android:layout_marginTop="21dp" />

    <Button
        android:text="Add new Money Unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAddNewMoneyUnit"
        android:layout_below="@+id/buttonCreateNewAc2"
        android:layout_alignEnd="@+id/buttonCreateNewAc2"
        android:layout_marginTop="10dp" />

    <Button
        android:text="New Exchange Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonNewExchangeRate"
        android:layout_below="@+id/buttonAddNewMoneyUnit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />
</RelativeLayout>
